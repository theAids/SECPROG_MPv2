<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreateBook</servlet-name>
        <servlet-class>Servlet.CreateBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateProducts</servlet-name>
        <servlet-class>Servlet.CreateProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addMagazines</servlet-name>
        <servlet-class>Servlet.addMagazines</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editMagazines</servlet-name>
        <servlet-class>Servlet.editMagazines</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteMagazines</servlet-name>
        <servlet-class>Servlet.deleteMagazines</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBook</servlet-name>
        <url-pattern>/CreateBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateProducts</servlet-name>
        <url-pattern>/CreateProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addMagazines</servlet-name>
        <url-pattern>/addMagazines</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editMagazines</servlet-name>
        <url-pattern>/editMagazines</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteMagazines</servlet-name>
        <url-pattern>/deleteMagazines</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
